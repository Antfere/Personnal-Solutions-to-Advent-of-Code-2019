f = open('input.txt', 'r')
ints = []
for line in f.readlines():
    ints.extend(line.split(","))
f.close()
ints = [int(i) for i in ints]
counter = 0
def opcode(ints, counter):
    if ints[counter] == 99:
      print(ints)
    elif ints[counter] == 1:
      ints[counter+3] = ints[1+counter] + ints[2+counter]
      counter = counter + 4
      print(counter)
      opcode(ints, counter)
    elif ints[counter] == 2:
      ints[3+counter] = ints[1+counter] * ints[2+counter]
      counter = counter + 4
      opcode(ints, counter)
    
opcode(ints, counter)
